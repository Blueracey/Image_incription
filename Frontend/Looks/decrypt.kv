<ImageButton@ButtonBehavior+Image>:
    on_release: app.root.get_screen('encrypt').show_full_image(self.source)
    allow_stretch: True
    keep_ratio: True
    size_hint_y: 0.5
    canvas.before:
        Color:
            rgba: (0.95, 0.95, 0.95, 0.15) if self.source else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size

<DecryptScreen>:
    name: "decrypt"
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.3, 0.15, 0.05, 1) if not app.theme_mode else (1, 0.8, 0.6, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Decrypt"
            font_size: 28
            color: (1, 1, 1, 1)

        Button:
            text: "Select Image"
            on_release: root.open_file_chooser()

        ImageButton:
            id: selected_image
            source: ""
            size_hint_y: 0.5

        TextInput:
            id: key_input
            hint_text: "Enter decryption key"
            multiline: False

        ToggleButton:
            id: reuse_key_button
            text: "Not Reusing Key"
            on_release: root.toggle_reuse_key()

        Button:
            text: "Decrypt"
            on_release: root.decrypt_message()

        Label:
            id: decrypted_message
            text: "Decrypted Message Here"

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"
