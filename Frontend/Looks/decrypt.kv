<ImagePopup@Popup>:
    title: 'Image Preview'
    size_hint: 0.9, 0.9
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Image:
            id: popup_image
            source: ''
            allow_stretch: True
            keep_ratio: True

<ImageButton@ButtonBehavior+Image>:
    allow_stretch: False
    keep_ratio: True
    on_release: app.root.get_screen(app.root.current).show_full_image(self.source)

<DecryptScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        padding: 0
        canvas.before:
            Color:
                rgba: 1, 0.5, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Decrypt Message"
            color: 1, 1, 1, 1
            font_size: '40sp'
            size_hint_y: 0.15

        Button:
            text: "Select Image"
            on_release: root.open_file_chooser()
            background_color: 0.3, 0.2, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.10

        ImageButton:
            id: selected_image
            source: ''
            size_hint_y: 0.20
            allow_stretch: False
            keep_ratio: True

        TextInput:
            id: key_input
            hint_text: "Enter your key"
            multiline: False
            foreground_color: 1, 1, 1, 1
            background_color: 0.1, 0.1, 0.1, 1
            font_size: 30
            size_hint_y: 0.08

        Button:
            id: reuse_key_button
            text: "Not Reusing Key"
            on_release:
                root.toggle_reuse_key()
                self.background_color = (0.1, 0.6, 0.1, 1) if root.reuse_key else (0.3, 0.2, 0.1, 1)
            background_color: 0.3, 0.2, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.10

        Button:
            text: "Decrypt"
            on_release: root.decrypt_message()
            background_color: 1, 0.5, 0.2, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.10

        Label:
            id: decrypted_message
            text: "Message Here"
            color: 1, 1, 1, 1
            font_size: 30
            size_hint_y: None
            height: self.texture_size[1] + dp(20)
            text_size: self.width - dp(40), None
            halign: 'center'
            valign: 'middle'

        Button:
            text: "Home"
            on_release: app.root.current = 'home'
            background_normal: ''
            background_color: 0.5, 0.1, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.12
