<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (0.5, 0.5, 0.5, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Encrypt and Decrypt App"
            font_size: 32
            color: (0, 0, 0, 1) if app.theme_mode else (1, 1, 1, 1)
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Encrypt"
                background_color: (0.0, 0.0, 0.6, 1) if app.theme_mode else (0.2, 0.4, 1, 1)
                on_release: app.root.current = "encrypt"
            Button:
                text: "Decrypt"
                background_color: (0.6, 0.0, 0.0, 1) if app.theme_mode else (1, 0.4, 0.4, 1)
                on_release: app.root.current = "decrypt"
        Button:
            text: "Toggle Dark Mode"
            size_hint_y: 0.1
            on_release: app.toggle_theme()
