<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (0.1, 0.1, 0.1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "PixelCrypt"
            font_size: 32
            color: 1, 1, 1, 1
        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Encrypt"
                background_color: 0.2, 0.4, 0.9, 1
                on_release: app.root.current = "encrypt"
            Button:
                text: "Decrypt"
                background_color: 0.9, 0.4, 0.1, 1
                on_release: app.root.current = "decrypt"
        Button:
            text: "Toggle Theme"
            size_hint_y: 0.1
            on_release: app.toggle_theme()
