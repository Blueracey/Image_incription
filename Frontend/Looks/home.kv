<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1) if app.theme_mode else (0.1, 0.1, 0.1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "assets/PixelCrypt_Logo.png"
            size_hint_y: 0.7
            size_hint_x: 1  
            allow_stretch: True
            keep_ratio: False

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Encrypt"
                background_color: (0.53, 0.81, 0.98, 1)
                on_release: app.root.current = "encrypt"
            Button:
                text: "Decrypt"
                background_color: (1, 0.4, 0.4, 1)
                on_release: app.root.current = "decrypt"

        Button:
            text: "Toggle Theme"
            size_hint_y: 0.1
            on_release: app.toggle_theme()
