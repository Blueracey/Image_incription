<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: "assets/PixelCrypt_Logo.png"
            size_hint_y: 0.7
            size_hint_x: 1  
            allow_stretch: True
            keep_ratio: False

        BoxLayout:
            size_hint_y: 0.2
            Button:
                text: "Encrypt"
                background_color: 0.2, 0.5, 0.9, 1
                color: 1, 1, 1, 1
                on_release: app.root.current = "encrypt"
                font_size: 45
            Button:
                text: "Decrypt"
                background_color: 0.9, 0.4, 0.1, 1
                color: 1, 1, 1, 1
                on_release: app.root.current = "decrypt"
                font_size: 45

