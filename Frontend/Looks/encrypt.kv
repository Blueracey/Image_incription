<ImageButton@ButtonBehavior+Image>:
    on_release: app.root.get_screen('encrypt').show_full_image(self.source)
    allow_stretch: True
    keep_ratio: True
    size_hint_y: 0.5
    canvas.before:
        Color:
            rgba: (0.95, 0.95, 0.95, 0.15) if self.source else (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size


<EncryptScreen>:
    name: "encrypt"
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: (0.05, 0.1, 0.2, 1) if not app.theme_mode else (0.85, 0.85, 0.85, 0.85)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Encrypt"
            font_size: 28
            color: (1, 1, 1, 1)

        Button:
            text: "Select Image"
            on_release: root.open_file_chooser()

        ImageButton:
            id: selected_image
            source: ""
            size_hint_y: 0.5

        TextInput:
            id: message_input
            hint_text: "Enter message to encrypt"
            multiline: False

        ToggleButton:
            id: reuse_key_button
            text: "Not Reusing Key"
            on_release: root.toggle_reuse_key()

        Button:
            text: "Encrypt"
            on_release: root.encrypt_message()

        Label:
            id: key_output
            text: "Key Used: "
            color: 1, 1, 1, 1
            size_hint_y: None
            height: self.texture_size[1] + dp(20)
            on_touch_down: if self.collide_point(*args[1].pos): root.copy_key_to_clipboard()

        ImageButton:
            id: encrypted_image
            source: ""
            size_hint_y: 0.5

        Label:
            id: success_label
            text: ""
            color: 0, 1, 0, 1
            font_size: 16
            size_hint_y: None
            height: self.texture_size[1] + dp(10)

        Button:
            text: "Download Encrypted Image"
            on_release: root.download_encrypted_image()

        Button:
            text: "Back to Home"
            on_release: app.root.current = "home"
