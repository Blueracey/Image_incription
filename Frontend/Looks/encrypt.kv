<ImagePopup@Popup>:
    title: 'Image Preview'
    size_hint: 0.9, 0.9
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        Image:
            id: popup_image
            source: ''
            allow_stretch: True
            keep_ratio: True

<ImageButton@ButtonBehavior+Image>:
    allow_stretch: False
    keep_ratio: True
    on_release: app.root.get_screen(app.root.current).show_full_image(self.source)

<EncryptScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 0
        padding: 0
        canvas.before:
            Color:
                rgba: 0.2, 0.3, 0.5, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Encrypt Message"
            color: 1, 1, 1, 1
            font_size: '40sp'
            size_hint_y: 0.14

        Button:
            text: "Select Image"
            on_release: root.open_file_chooser()
            background_color: 0.1, 0.1, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.09

        ImageButton:
            id: selected_image
            source: ''
            size_hint_y: 0.13
            allow_stretch: False
            keep_ratio: True

        TextInput:
            id: message_input
            hint_text: "Enter your message"
            multiline: True
            foreground_color: 1, 1, 1, 1
            background_color: 0.1, 0.1, 0.1, 1
            font_size: 15
            size_hint_y: 0.06

        Button:
            id: reuse_key_button
            text: "Not Reusing Key"
            on_release:
                root.toggle_reuse_key()
                self.background_color = (0.1, 0.6, 0.1, 1) if root.reuse_key else (0.3, 0.4, 0.5, 1)
            background_color: 0.3, 0.4, 0.5, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.09

        Button:
            text: "Encrypt"
            on_release: root.encrypt_message()
            background_color: 0.2, 0.5, 0.9, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.10

        Button:
            id: key_output
            text: "Click to copy key"
            on_release: root.copy_key_to_clipboard()
            background_color: 0, 0, 0, 0
            color: 1, 1, 0.5, 1
            font_size: 30
            size_hint_y: 0.085

        ImageButton:
            id: encrypted_image
            source: ''
            size_hint_y: 0.13
            allow_stretch: False
            keep_ratio: True

        Button:
            text: "Download Image"
            on_release: root.download_encrypted_image()
            background_color: 0.1, 0.1, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.08

        Button:
            text: "Home"
            on_release: app.root.current = 'home'
            background_normal: ''
            background_color: 0.5, 0.1, 0.1, 1
            color: 1, 1, 1, 1
            font_size: 32
            size_hint_y: 0.12
